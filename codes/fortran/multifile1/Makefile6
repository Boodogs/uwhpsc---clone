
# $UWHPSC/codes/fortran/multifile1/Makefile6

OBJECTS = main.o sub1.o sub2.o
.PHONY: clean help

fullcode.exe: $(OBJECTS)
	gfortran $(OBJECTS) -o fullcode.exe

%.o : %.f90
	gfortran -c $< 

clean:
	rm -f $(OBJECTS) fullcode.exe

help:
	@echo "Valid targets:"
	@echo "  fullcode.exe"
	@echo "  main.o"
	@echo "  sub1.o"
	@echo "  sub2.o"
	@echo "  clean:  removes .o and .exe files"
